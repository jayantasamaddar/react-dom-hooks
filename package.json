  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./src/*",
    "build:apps": "turbo run build --filter=./apps/*",
    "dev": "turbo run dev --parallel",
    "prepare": "husky install",
    "test": "turbo run test",
    "format-check": "turbo format-check",
    "format": "turbo format",
    "clean": "turbo run clean",
    "clean:docs": "turbo clean:docs",
    "clean:all": "turbo run clean:all",
    "lint": "turbo lint",
    "ts-check": "tsc --noemit",
    "run-checks": "turbo run-checks",
    "syncpack": "syncpack list-mismatches",
    "docsgen": "turbo run docsgen",
    "release": "turbo run build --filter=./src/* && changeset publish"
  }
