{
  "extends": "../../tsconfig.base.json",
  "include": ["./src"],
  "exclude": [
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.snap.ts",
    ".turbo",
    "coverage"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  }
}
